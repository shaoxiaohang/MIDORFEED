<?xml version="1.0" encoding="UTF-8"?>
<scene>		
	<skybox>
	<right>skybox/right.jpg</right>
	<left>skybox/left.jpg</left>
	<up>skybox/top.jpg</up>
	<down>skybox/bottom.jpg</down>
	<back>skybox/back.jpg</back>
	<front>skybox/front.jpg</front>
	</skybox>	
	<objects>
		<model>
			<name>nanosuit</name>
			<position x="-2" y="0" z="-1"/>
			<scale>0.1</scale>
			<filename>nanosuit/nanosuit.obj</filename>
		</model>
		<floor>
			<name>floor</name>
			<position x="0" y="0" z="0"/>
			<material>
				<texture2D>
					<filename>metal.png</filename>
					<wrapmode>clamp_to_edge</wrapmode>
					<filtermode>linear</filtermode>
				</texture2D>
			</material>
		</floor>
		<cube>
			<name>cube1</name>
			<material>
				<texture2D>
					<filename>marble.jpg</filename>
				</texture2D>
			</material>
		</cube>
		<cube>
			<name>cube2</name>
			<position x="2" y="0" z="0"/>
			<material>
				<texture2D>
					<filename>marble.jpg</filename>
				</texture2D>
			</material>
		</cube>
		<billboard>
			<name>grass</name>
			<position x="3" y="0" z="0"/>
			<material>
				<texture2D>
					<filename>grass.png</filename>
					<wrapmode>clamp_to_edge</wrapmode>
					<filtermode>linear</filtermode>
				</texture2D>
				<discardAlpha threshold = "0.1"/>
			</material>
		</billboard>
		<billboard>
			<name>window1</name>
			<position x="-0.5" y="0" z="2"/>
			<material>
				<texture2D>
					<filename>blending_transparent_window.png</filename>
				</texture2D>
				<transparent>true</transparent>
			</material>
		</billboard>
		<billboard>
			<name>window2</name>
			<position x="-1" y="0" z="1"/>
			<material>
				<texture2D>
					<filename>blending_transparent_window.png</filename>
				</texture2D>
				<transparent>true</transparent>
			</material>
		</billboard>
	</objects>
	<lights>
		<light1>
			<type>direction</type>
			<direction x="0" y="-1" z= "-1"/>
			<ambient r="0.2" g="0.2" b="0.2"/>
			<diffuse r="0.8" g="0.8" b="0.8"/>
			<specular r="0.3" g="0.3" b="0.3"/>
		</light1>
	</lights>
</scene>